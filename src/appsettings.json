{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Jwt": {
    "Issuer": "Gateway",
    "Audience": "ApiUsers",
    "Key": "YourSuperSecretKeyThatIsAtLeast32CharactersLong!@#$%"
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": "Information",
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "./logs/gateway-.txt",
          "rollingInterval": "Day"
        }
      }
    ]
  },
  "ReverseProxy": {
    "Routes": {
      "notification-route": {
        "ClusterId": "notification-cluster",
        "Match": {
          "Path": "/api/notifications/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "/api/notifications/{**catch-all}" }
        ]
      },
      "user-route": {
        "ClusterId": "user-cluster",
        "Match": {
          "Path": "/api/users/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "/api/users/{**catch-all}" }
        ]
      },
      "storage-route": {
        "ClusterId": "storage-cluster",
        "Match": {
          "Path": "/api/storage/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "/api/storage/{**catch-all}" }
        ]
      },
      "search-route": {
        "ClusterId": "search-cluster",
        "Match": {
          "Path": "/api/search/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "/api/search/{**catch-all}" }
        ]
      },
      "newsfeed-route": {
        "ClusterId": "newsfeed-cluster",
        "Match": {
          "Path": "/api/newsfeed/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "/api/newsfeed/{**catch-all}" }
        ]
      },
      "post-route": {
        "ClusterId": "post-cluster",
        "Match": {
          "Path": "/api/posts/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "/api/posts/{**catch-all}" }
        ]
      },
      "graph-route": {
        "ClusterId": "graph-cluster",
        "Match": {
          "Path": "/api/graph/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "/api/graph/{**catch-all}" }
        ]
      }
    },
    "Clusters": {
      "notification-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:5274/"
          }
        }
      },
      "user-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:5002/"
          }
        }
      },
      "storage-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:5003/"
          }
        }
      },
      "search-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:5004/"
          }
        }
      },
      "newsfeed-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:5005/"
          }
        }
      },
      "post-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:5006/"
          }
        }
      },
      "graph-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:5007/"
          }
        }
      }
    }
  }
}